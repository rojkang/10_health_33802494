<!DOCTYPE html>
<html>
<head>
    <title>All Exercises</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <header class="main-header">
        <h1>Rehab Exercise Library</h1>
    </header>

    <div class="container">

        <div class="card">

            <div class="nav-links">
                <a href="/">Home</a> |
                <a href="/exercises/add">Add New Exercise</a> |
                <a href="/exercises/search">Search Exercises</a>
            </div>

            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Body Part</th>
                        <th>Difficulty</th>
                        <th>Instructions</th>
                    </tr>
                </thead>

                <tbody>
                    <% exercises.forEach(exercise => { %>
                        <tr>
                            <td><%= exercise.name %></td>
                            <td><%= exercise.body_part %></td>
                            <td><%= exercise.difficulty %></td>
                            <td><%= exercise.instructions %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>

        </div>

    </div>

</body>
</html>
